<h1>Signup</h1>

<% if @user && @user.errors.any? %>
  <div>
    <strong>Some missing info for signup, please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form action="/music/signup" method="post">
  <div>
    <label for="">Email:
      <input type="text" name="email" />
    </label>
  </div>
  <div>
    <label for="">Password:
      <input type="password" name="password" />
    </label>
  </div>
  <div>
      <input type="submit" name="Submit" />
  </div>
</form>